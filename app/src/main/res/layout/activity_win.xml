<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.WinActivity">


    <TextView
        android:id="@+id/text_ganar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Jugador x Gana!"
        android:textSize="32dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:layout_below="@id/text_ganar"
        android:onClick="playAgain"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/btnMenuWin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:layout_below="@id/text_ganar"
        android:layout_toRightOf="@id/btnPlayAgain"
        android:onClick="toMenu3"
        android:layout_marginLeft="30dp"/>
</RelativeLayout>