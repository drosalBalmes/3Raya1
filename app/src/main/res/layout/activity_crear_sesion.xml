<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.CrearSesion">

    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="back"
        android:src="@drawable/bckarrow"/>

    <TextView
        android:id="@+id/txtNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:text="Nombre de usuario:"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/inputNom"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_below="@id/txtNom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edittext" />

    <TextView
        android:id="@+id/txtcontra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputNom"
        android:textSize="24dp"
        android:text="Contrase単a:"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/inputcontra"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_below="@id/txtcontra"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext" />

    <CheckBox
        android:id="@+id/chkbxShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputcontra"
        android:layout_marginLeft="70dp"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:buttonTint="#FFFFFF" />

    <TextView
        android:id="@+id/txtchkbxShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chkbxShow"
        android:layout_below="@id/inputcontra"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:text="Mostrar contrase単a"/>

    <TextView
        android:id="@+id/txtcontrarepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/inputcontra"
        android:textSize="24dp"
        android:text="Repita la Contrase単a:"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/inputcontrarepeat"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_below="@id/txtcontrarepeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_edittext" />

    <CheckBox
        android:id="@+id/chkbxShow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputcontrarepeat"
        android:layout_marginLeft="70dp"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:buttonTint="#FFFFFF" />

    <TextView
        android:id="@+id/txtchkbxShow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chkbxShow"
        android:layout_below="@id/inputcontrarepeat"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:text="Mostrar contrase単a"/>

    <Button
        android:id="@+id/btnCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputcontrarepeat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Crear cuenta"
        android:onClick="sesionCreated"
        app:cornerRadius="5dp" />

</RelativeLayout>