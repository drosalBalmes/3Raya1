<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.Inventory">

    <TextView
        android:id="@+id/txtFichas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Fichas: "
        android:textColor="@color/black"
        android:textSize="32dp"/>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFichas"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/chwerkSkin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/background"
            android:scaleType="fitCenter"
            android:onClick="toAllInventory"
            android:src="@drawable/chwerk" />
        <TextView
            android:id="@+id/txt_chwerSkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
                android:text="Local: Chwerk"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/linear1"
        android:layout_below="@id/txtFichas"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/amogus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/background"
            android:scaleType="fitCenter"
            android:onClick="toAllInventory"
            android:src="@drawable/amogus" />
        <TextView
            android:id="@+id/txt_amogus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="Visitante: Amogus"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txtTableros"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear1"
        android:layout_marginTop="50dp"
        android:text="Tableros: "
        android:textColor="@color/black"
        android:textSize="32dp"/>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtTableros"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/tablero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/background"
            android:scaleType="fitCenter"
            android:onClick="toAllInventory"
            android:src="@drawable/tablero" />
        <TextView
            android:id="@+id/txt_tablero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:text="Visitante: Amogus"/>
    </LinearLayout>

</RelativeLayout>